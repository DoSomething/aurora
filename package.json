    "clean": "rm -rf public/dist",
    "modernizr": "modernizr -c node_modules/@dosomething/forge/modernizr.json -d public/dist/modernizr.js"
  },
  "babel": {
    "presets": [
      "@dosomething/babel-config"
    ]
  },
  "dependencies": {
    "@dosomething/forge": "^6.8.0",
    "@dosomething/gateway": "^1.1.5",
    "babel-polyfill": "^6.26.0",
    "dom-delegate": "^2.0.3",
    "dosomething-modal": "^0.3.4"
  },
  "devDependencies": {
    "@dosomething/webpack-config": "^2.0.4",
    "@dosomething/babel-config": "^1.0.0",
    "modernizr": "^3.3.1",
    "webpack": "^2.7.0"
  }
}
