{
  "private": true,
  "scripts": {
    "start": "npm run clean && npm run modernizr && NODE_ENV=development webpack --watch",
    "build:dev": "npm run clean && npm run modernizr && NODE_ENV=development webpack",
    "build": "npm run clean && npm run modernizr && NODE_ENV=production webpack",
    "clean": "rm -rf public/dist",
    "modernizr": "modernizr -c node_modules/@dosomething/forge/modernizr.json -d public/dist/modernizr.js",
    "heroku-postbuild": "npm run build",
    "format:js": "prettier --write \"resources/**/*.{js,md,scss,graphql}\"",
    "format:php": "prettier \"{app,config,database,resources,routes,tests}/**/*.php\" \"!resources/views/**\""
  },
  "engines": {
    "node": "10.x",
    "npm": "6.x"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "babel": {
    "presets": [
      "@dosomething"
    ]
  },
  "dependencies": {
    "@dosomething/forge": "^6.9.1",
    "@dosomething/gateway": "^1.5.0",
    "babel-polyfill": "^6.26.0",
    "dom-delegate": "^2.2.1",
    "dosomething-modal": "^0.3.4",
    "environment-badge": "^1.3.1",
    "graphql": "^14.6.0",
    "graphql-tag": "^2.10.3",
    "turbolinks": "^5.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.8.6",
    "@babel/runtime": "^7.8.4",
    "@dosomething/babel-preset": "^3.2.0",
    "@dosomething/webpack-config": "^6.0.0",
    "@prettier/plugin-php": "^0.14.3",
    "autoprefixer": "^9.7.4",
    "core-js": "^3.6.4",
    "husky": "^4.2.5",
    "modernizr": "^3.11.3",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11"
  }
}
